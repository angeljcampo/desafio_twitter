<% if user_signed_in?%> <%= "Welcome #{current_user.nickname}" %> <% end %>


<h1 class="text-center">Tweets</h1>


<div class="row">
      <% @tweets.each do |tweet| %> 
      <div class="card my-2 mx-auto col-12">
        <div class="card-body">
          <h5 class="card-title"><%= tweet.user.nickname %></h5>
          <p class="card-text text-center"><%= tweet.tweet_content %></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
          <img src="<%= tweet.user.photo_user%>" class="card-img-top" alt="...">
          <span class="ml-3">An item</span>
          </li>
        </ul>
      </div>
      <% end %>
      </div>
    </div>
</div>


    

<br />

<div class="row">
  <div class="col-md-8 offset-md-2"><%= paginate @tweets %></div>
</div>
